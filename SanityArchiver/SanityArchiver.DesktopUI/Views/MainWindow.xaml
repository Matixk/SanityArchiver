<Window x:Class="SanityArchiver.DesktopUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{StaticResource MainWindowDataContext}"
        Title="Sanity Archiver" Height="450" Width="800">
    <Grid ColumnDefinitions="{StaticResource Columns}"
          RowDefinitions="{StaticResource Rows}">
        
        <TreeView Grid.Column="0" Grid.Row="1"
                  ItemsSource="{Binding Directories}"
                  ItemTemplate="{StaticResource DirectoryTreeView}"/>

    </Grid>
</Window>
