<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ColumnDefinitionCollection
        x:Key="Columns">
        
        <ColumnDefinition 
            Width="*"/>
        
        <ColumnDefinition 
            Width="3*"/>
        
    </ColumnDefinitionCollection>
    <RowDefinitionCollection
        x:Key="Rows">
        
        <RowDefinition 
            Height="Auto"/>
        
        <RowDefinition 
            Height="*"/>
        
    </RowDefinitionCollection>
</ResourceDictionary>